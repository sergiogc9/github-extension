{
  "manifest_version": 2,
  "name": "Chrome Extension with React and Typescript Starter Pack",
  "short_name": "React & Typescript based Chrome Extension",
  "version": "1.0.0",
  "description": "Chrome Extension with React and Typescript Starter Pack",
  "permissions": ["tabs", "activeTab", "storage"],
  "web_accessible_resources": ["html/index.html"],
  "browser_action": {
    "default_title": "React Chrome Extension Starter",
    "default_popup": "./html/index.html?popup=true"
  },
  "icons": {
    "128": "./assets/icon.png"
  },
  "content_scripts": [
    {
      "js": ["contentscript.js"],
      "css": ["contentscript.css"],
      "matches": ["https://github.com/*"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
