{
	"manifest_version": 2,
	"name": "The Github Fox extension",
	"short_name": "The Github Fox extension",
	"version": "0.2.0",
	"description": "",
	"permissions": ["tabs", "storage"],
	"web_accessible_resources": ["html/index.html"],
	"browser_action": {
		"default_title": "The Github Fox extension popup",
		"default_popup": "./html/index.html?popup=true"
	},
	"icons": {
		"128": "./assets/icon.png"
	},
	"content_scripts": [
		{
			"js": ["jquery.js", "jquery-ui.js", "contentscript.js"],
			"css": ["jquery-ui.css", "contentscript.css"],
			"matches": ["https://github.com/*"],
			"all_frames": true
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}
