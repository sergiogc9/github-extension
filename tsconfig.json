{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src/html/src",
		"esModuleInterop": true,
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"@html/*": ["./*"],
			"@root/*": ["../../../src/*"]
		},
		"skipLibCheck": true,
		"target": "es6"
	},
	"include": ["src/background", "src/contentscript", "src/html/src/**/*"]
}
